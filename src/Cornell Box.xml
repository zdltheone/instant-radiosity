<scene>
  <camera>
    <perspective near="0.1" far="1000" xfov="60" yfov="60" width="800" height="600"/>
    <lookat x="0" y="0" z="10" upX="0" upY="1" upZ="0"/>
    <translate x="0" y="10" z="-25"/>
 </camera>
  
  <areaLight width="5" height="5">
    <color r="1" g="1" b="1"/>
    <target x="0" y="0" z="0"/>
    <translate x="0" y="19.99999" z="-5"/>
  </areaLight>

 
  <!-- back wall -->
  <square edgelen="10">
    <color r="0.8" g="0.8" b="0.8"/>
    <translate x="0" y="10" z="10"/>
    <rotate axisX="1" axisY="0" axisZ="0" degrees="-90"/>
  </square>
  <!-- floor -->
  <square edgelen="10">
    <color r="0.9" g="0.9" b="0.9"/>
    <translate x="0" y="0" z="0"/>
  </square>
  <!-- ceiling -->
  <square edgelen="10">
    <color r="1.0" g="1.0" b="1.0"/>
    <translate x="0" y="20" z="0"/>
    <rotate axisX="1" axisY="0" axisZ="0" degrees="-180"/>
  </square>
  <!-- left wall-->
  <square edgelen="10">
    <color r="0" g="0" b="1"/>
    <translate x="-10" y="10" z="0"/>
    <rotate axisX="0" axisY="0" axisZ="1" degrees="-90"/>
  </square>
  <!-- right wall-->
  <square edgelen="10">
    <color r="1" g="0" b="0"/>
    <translate x="10" y="10" z="0"/>
    <rotate axisX="0" axisY="0" axisZ="1" degrees="90"/>
  </square>

  <cube edgelen="12">
    <translate x="-1" y="1" z="2"/>
    <color r="0.0" g="0.5" b="0.1"/>
    <rotate axisX="0" axisY="1" axisZ="0" degrees="-45"/>
  </cube>

  <!--
  <sphere radius="3">
    <color r="0.2" g="0.3" b="0.5"/>
    <scale x="1" y="1" z="1" />
    <translate x="-2" y="4" z="2"/>
  </sphere> -->

</scene>